generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Order {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @db.Date
  description String
  imageUrl    String
  name        String
  price       String
  updatedAt   DateTime @db.Date
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String
  name     String
  password String
}

model events {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  date        String
  description String
  image       String
  name        String
  summary     String
}

model products {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @db.Date
  description String
  imageUrl    String
  name        String
  price       String
  updatedAt   DateTime @db.Date
}
