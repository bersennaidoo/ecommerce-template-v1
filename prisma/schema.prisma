generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model events {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  date        String
  description String
  image       String
  name        String
  summary     String
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @db.Date
  description String
  imageUrl    String
  name        String
  price       String
  updatedAt   DateTime @db.Date

  @@map("products")
}
